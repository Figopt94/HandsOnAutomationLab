{
  "name": "crud-livros-expandido",
  "version": "2.0.0",
  "description": "Sistema completo de gerenciamento de livros com autenticação",
  "main": "Backend/server.js",
  "scripts": {
    "start": "node Backend/server.js",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:headed": "npx playwright test --headed",
    "test:report": "npx playwright test && allure generate allure-results -o allure-report --clean && allure open allure-report",
    "allure:generate": "allure generate allure-results -o allure-report --clean",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results"
  },
  "keywords": [],
  "author": "Bruno Figueiredo - Mestre QA",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "allure-playwright": "^3.4.2"
  }
}
